<div class="section">
    <%= simple_form_for @category do |f| %>
        <div class="field">
            <div class="control">
                <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <%= f.input :details, input_html: { class: 'textarea' }, wrapper: false, label_html: { class: 'label' } %>
            </div>
        </div>
        <%= f.button :submit, class: "button is-primary" %>
    <% end %>
</div>